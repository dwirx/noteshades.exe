#include <windows.h>

/* Menu command IDs */
#define IDM_FILE_NEW        101
#define IDM_FILE_OPEN       102
#define IDM_FILE_SAVE       103
#define IDM_FILE_SAVEAS     104
#define IDM_FILE_EXIT       105
#define IDM_FILE_NEWTAB     106
#define IDM_FILE_CLOSETAB   107
#define IDM_EDIT_UNDO       201
#define IDM_EDIT_CUT        202
#define IDM_EDIT_COPY       203
#define IDM_EDIT_PASTE      204
#define IDM_EDIT_SELECTALL  205
#define IDM_EDIT_FIND       206
#define IDM_EDIT_REPLACE    207
#define IDM_EDIT_FINDNEXT   208
#define IDM_HELP_CONTENTS   302
#define IDM_FORMAT_WORDWRAP 251
#define IDM_VIEW_LINENUMBERS 261
#define IDM_VIEW_SYNTAX      262
#define IDM_VIEW_VIMMODE     263
#define IDM_HELP_ABOUT      301
#define IDR_MAINMENU        1000
#define IDR_ACCEL           1001

/* Main Menu */
IDR_MAINMENU MENU
BEGIN
    POPUP "&File"
    BEGIN
        MENUITEM "&New\tCtrl+N",            IDM_FILE_NEW
        MENUITEM "New &Tab\tCtrl+T",        IDM_FILE_NEWTAB
        MENUITEM "&Open...\tCtrl+O",        IDM_FILE_OPEN
        MENUITEM "&Save\tCtrl+S",           IDM_FILE_SAVE
        MENUITEM "Save &As...",             IDM_FILE_SAVEAS
        MENUITEM SEPARATOR
        MENUITEM "&Close Tab\tCtrl+W",      IDM_FILE_CLOSETAB
        MENUITEM SEPARATOR
        MENUITEM "E&xit",                   IDM_FILE_EXIT
    END
    POPUP "&Edit"
    BEGIN
        MENUITEM "&Undo\tCtrl+Z",           IDM_EDIT_UNDO
        MENUITEM SEPARATOR
        MENUITEM "Cu&t\tCtrl+X",            IDM_EDIT_CUT
        MENUITEM "&Copy\tCtrl+C",           IDM_EDIT_COPY
        MENUITEM "&Paste\tCtrl+V",          IDM_EDIT_PASTE
        MENUITEM SEPARATOR
        MENUITEM "Select &All\tCtrl+A",     IDM_EDIT_SELECTALL
        MENUITEM SEPARATOR
        MENUITEM "&Find...\tCtrl+F",        IDM_EDIT_FIND
        MENUITEM "Find &Next\tF3",          IDM_EDIT_FINDNEXT
        MENUITEM "&Replace...\tCtrl+H",     IDM_EDIT_REPLACE
    END
    POPUP "F&ormat"
    BEGIN
        MENUITEM "&Word Wrap",              IDM_FORMAT_WORDWRAP
    END
    POPUP "&View"
    BEGIN
        MENUITEM "&Line Numbers",           IDM_VIEW_LINENUMBERS
        MENUITEM "&Syntax Highlighting",    IDM_VIEW_SYNTAX
        MENUITEM SEPARATOR
        MENUITEM "&Vim Mode\tCtrl+Shift+V", IDM_VIEW_VIMMODE
    END
    POPUP "&Help"
    BEGIN
        MENUITEM "&Help Contents\tF1",      IDM_HELP_CONTENTS
        MENUITEM SEPARATOR
        MENUITEM "&About",                  IDM_HELP_ABOUT
    END
END

/* Accelerator Table for Keyboard Shortcuts */
IDR_ACCEL ACCELERATORS
BEGIN
    "N",    IDM_FILE_NEW,       VIRTKEY, CONTROL
    "T",    IDM_FILE_NEWTAB,    VIRTKEY, CONTROL
    "O",    IDM_FILE_OPEN,      VIRTKEY, CONTROL
    "S",    IDM_FILE_SAVE,      VIRTKEY, CONTROL
    "W",    IDM_FILE_CLOSETAB,  VIRTKEY, CONTROL
    "Z",    IDM_EDIT_UNDO,      VIRTKEY, CONTROL
    "X",    IDM_EDIT_CUT,       VIRTKEY, CONTROL
    "C",    IDM_EDIT_COPY,      VIRTKEY, CONTROL
    "V",    IDM_EDIT_PASTE,     VIRTKEY, CONTROL
    "A",    IDM_EDIT_SELECTALL, VIRTKEY, CONTROL
    "F",    IDM_EDIT_FIND,      VIRTKEY, CONTROL
    "H",    IDM_EDIT_REPLACE,   VIRTKEY, CONTROL
    VK_F3,  IDM_EDIT_FINDNEXT,  VIRTKEY
    VK_F1,  IDM_HELP_CONTENTS,  VIRTKEY
END

/* Find/Replace Dialog IDs */
#define IDD_FINDREPLACE     500
#define IDC_FIND_TEXT       501
#define IDC_REPLACE_TEXT    502
#define IDC_FIND_NEXT       503
#define IDC_REPLACE         504
#define IDC_REPLACE_ALL     505
#define IDC_MATCH_CASE      506
#define IDC_WHOLE_WORD      507

/* Help Dialog ID */
#define IDD_HELP            600
#define IDC_HELP_TEXT       601

/* Find and Replace Dialog */
IDD_FINDREPLACE DIALOGEX 0, 0, 280, 120
STYLE DS_SETFONT | DS_MODALFRAME | DS_FIXEDSYS | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Find and Replace"
FONT 9, "Segoe UI"
BEGIN
    LTEXT           "Find what:",1000,10,12,50,10
    EDITTEXT        IDC_FIND_TEXT,65,10,140,14,ES_AUTOHSCROLL
    LTEXT           "Replace with:",1001,10,32,50,10
    EDITTEXT        IDC_REPLACE_TEXT,65,30,140,14,ES_AUTOHSCROLL
    CONTROL         "Match case",IDC_MATCH_CASE,"Button",BS_AUTOCHECKBOX | WS_TABSTOP,10,55,60,10
    CONTROL         "Whole word",IDC_WHOLE_WORD,"Button",BS_AUTOCHECKBOX | WS_TABSTOP,80,55,60,10
    DEFPUSHBUTTON   "Find Next",IDC_FIND_NEXT,215,10,55,14
    PUSHBUTTON      "Replace",IDC_REPLACE,215,30,55,14
    PUSHBUTTON      "Replace All",IDC_REPLACE_ALL,215,50,55,14
    PUSHBUTTON      "Close",IDCANCEL,215,95,55,14
END

