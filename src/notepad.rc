/* Find and Replace Dialog */
IDD_FINDREPLACE DIALOGEX 0, 0, 280, 120
STYLE DS_SETFONT | DS_MODALFRAME | DS_FIXEDSYS | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Find and Replace"
FONT 9, "Segoe UI"
BEGIN
    LTEXT           "Find what:",1000,10,12,50,10
    EDITTEXT        IDC_FIND_TEXT,65,10,140,14,ES_AUTOHSCROLL
    LTEXT           "Replace with:",1001,10,32,50,10
    EDITTEXT        IDC_REPLACE_TEXT,65,30,140,14,ES_AUTOHSCROLL
    CONTROL         "Match case",IDC_MATCH_CASE,"Button",BS_AUTOCHECKBOX | WS_TABSTOP,10,55,60,10
    CONTROL         "Whole word",IDC_WHOLE_WORD,"Button",BS_AUTOCHECKBOX | WS_TABSTOP,80,55,60,10
    DEFPUSHBUTTON   "Find Next",IDC_FIND_NEXT,215,10,55,14
    PUSHBUTTON      "Replace",IDC_REPLACE,215,30,55,14
    PUSHBUTTON      "Replace All",IDC_REPLACE_ALL,215,50,55,14
    PUSHBUTTON      "Close",IDCANCEL,215,95,55,14
END

/* Go to Line Dialog */
IDD_GOTOLINE DIALOGEX 0, 0, 200, 70
STYLE DS_SETFONT | DS_MODALFRAME | DS_FIXEDSYS | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Go to Line"
FONT 9, "Segoe UI"
BEGIN
    LTEXT           "Line number:",1200,10,12,50,10
    EDITTEXT        IDC_GOTOLINE_EDIT,65,10,70,14,ES_AUTOHSCROLL | ES_NUMBER
    LTEXT           "",IDC_GOTOLINE_INFO,10,30,180,10
    DEFPUSHBUTTON   "Go",IDOK,85,50,50,14
    PUSHBUTTON      "Cancel",IDCANCEL,140,50,50,14
END

/* Progress Dialog */
IDD_PROGRESS DIALOGEX 0, 0, 280, 80
STYLE DS_SETFONT | DS_MODALFRAME | DS_FIXEDSYS | WS_POPUP | WS_CAPTION
CAPTION "Loading File"
FONT 9, "Segoe UI"
BEGIN
    LTEXT           "Loading file...",IDC_PROGRESS_TEXT,10,10,260,10
    CONTROL         "",IDC_PROGRESS_BAR,"msctls_progress32",WS_BORDER,10,25,260,14
    LTEXT           "Please wait while the file is being loaded.",1300,10,45,260,10
    PUSHBUTTON      "Cancel",IDC_PROGRESS_CANCEL,115,60,50,14
END

