        MENUITEM "&Vim Mode\tCtrl+Shift+V", IDM_VIEW_VIMMODE
    END
    POPUP "&Help"
    BEGIN
        MENUITEM "&Help Contents\tF1",      IDM_HELP_CONTENTS
        MENUITEM SEPARATOR
        MENUITEM "&About",                  IDM_HELP_ABOUT
    END
END

/* Accelerator Table for Keyboard Shortcuts */
IDR_ACCEL ACCELERATORS
BEGIN
    /* File operations */
    "N",    IDM_FILE_NEW,       VIRTKEY, CONTROL
    "T",    IDM_FILE_NEWTAB,    VIRTKEY, CONTROL
    "O",    IDM_FILE_OPEN,      VIRTKEY, CONTROL
    "S",    IDM_FILE_SAVE,      VIRTKEY, CONTROL
    "S",    IDM_FILE_SAVEAS,    VIRTKEY, CONTROL, SHIFT
    "W",    IDM_FILE_CLOSETAB,  VIRTKEY, CONTROL
    
    /* Tab navigation */
    VK_TAB, IDM_TAB_NEXT,       VIRTKEY, CONTROL
    VK_TAB, IDM_TAB_PREV,       VIRTKEY, CONTROL, SHIFT
    VK_PRIOR, IDM_TAB_PREV,     VIRTKEY, CONTROL  /* Ctrl+PageUp */
    VK_NEXT, IDM_TAB_NEXT,      VIRTKEY, CONTROL  /* Ctrl+PageDown */
    "1",    IDM_TAB_1,          VIRTKEY, CONTROL
    "2",    IDM_TAB_2,          VIRTKEY, CONTROL
    "3",    IDM_TAB_3,          VIRTKEY, CONTROL
    "4",    IDM_TAB_4,          VIRTKEY, CONTROL
    "5",    IDM_TAB_5,          VIRTKEY, CONTROL
    "6",    IDM_TAB_6,          VIRTKEY, CONTROL
    "7",    IDM_TAB_7,          VIRTKEY, CONTROL
    "8",    IDM_TAB_8,          VIRTKEY, CONTROL
    "9",    IDM_TAB_9,          VIRTKEY, CONTROL
    
    /* Edit operations */
    "Z",    IDM_EDIT_UNDO,      VIRTKEY, CONTROL
    "X",    IDM_EDIT_CUT,       VIRTKEY, CONTROL
    "C",    IDM_EDIT_COPY,      VIRTKEY, CONTROL
    "V",    IDM_EDIT_PASTE,     VIRTKEY, CONTROL
    "A",    IDM_EDIT_SELECTALL, VIRTKEY, CONTROL
    "F",    IDM_EDIT_FIND,      VIRTKEY, CONTROL
    "H",    IDM_EDIT_REPLACE,   VIRTKEY, CONTROL
    "G",    IDM_EDIT_GOTOLINE,  VIRTKEY, CONTROL
    VK_F3,  IDM_EDIT_FINDNEXT,  VIRTKEY
    
    /* Line operations */
    "D",    IDM_EDIT_DUPLICATELINE, VIRTKEY, CONTROL
    "K",    IDM_EDIT_DELETELINE,    VIRTKEY, CONTROL, SHIFT
    VK_UP,  IDM_EDIT_MOVELINEUP,    VIRTKEY, ALT
    VK_DOWN, IDM_EDIT_MOVELINEDOWN, VIRTKEY, ALT
    VK_OEM_2, IDM_EDIT_TOGGLECOMMENT, VIRTKEY, CONTROL  /* Ctrl+/ */
    VK_F5,  IDM_EDIT_LOADMORE,      VIRTKEY  /* F5 - Load more content for partial files */

    /* View operations */
    "L",    IDM_VIEW_LINENUMBERS, VIRTKEY, CONTROL
    "V",    IDM_VIEW_VIMMODE,   VIRTKEY, CONTROL, SHIFT
    VK_OEM_PLUS, IDM_VIEW_ZOOMIN, VIRTKEY, CONTROL
    VK_OEM_MINUS, IDM_VIEW_ZOOMOUT, VIRTKEY, CONTROL
    "0",    IDM_VIEW_ZOOMRESET, VIRTKEY, CONTROL
    
    /* Format */
    "Z",    IDM_FORMAT_WORDWRAP, VIRTKEY, ALT
    
    /* Help */
    VK_F1,  IDM_HELP_CONTENTS,  VIRTKEY
END

