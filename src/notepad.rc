/* Main Menu */
IDR_MAINMENU MENU
BEGIN
    POPUP "&File"
    BEGIN
        MENUITEM "&New\tCtrl+N",            IDM_FILE_NEW
        MENUITEM "New &Tab\tCtrl+T",        IDM_FILE_NEWTAB
        MENUITEM "&Open...\tCtrl+O",        IDM_FILE_OPEN
        MENUITEM "&Save\tCtrl+S",           IDM_FILE_SAVE
        MENUITEM "Save &As...\tCtrl+Shift+S", IDM_FILE_SAVEAS
        MENUITEM SEPARATOR
        MENUITEM "&Close Tab\tCtrl+W",      IDM_FILE_CLOSETAB
        MENUITEM "Close &All Tabs",         IDM_FILE_CLOSEALL
        MENUITEM "Close &Other Tabs",       IDM_FILE_CLOSEOTHERS
        MENUITEM SEPARATOR
        MENUITEM "Next Tab\tCtrl+Tab",      IDM_TAB_NEXT
        MENUITEM "Previous Tab\tCtrl+Shift+Tab", IDM_TAB_PREV
        MENUITEM SEPARATOR
        MENUITEM "E&xit\tAlt+F4",           IDM_FILE_EXIT
    END
    POPUP "&Edit"
    BEGIN
        MENUITEM "&Undo\tCtrl+Z",           IDM_EDIT_UNDO
        MENUITEM SEPARATOR
        MENUITEM "Cu&t\tCtrl+X",            IDM_EDIT_CUT
        MENUITEM "&Copy\tCtrl+C",           IDM_EDIT_COPY
        MENUITEM "&Paste\tCtrl+V",          IDM_EDIT_PASTE
        MENUITEM SEPARATOR
        MENUITEM "Select &All\tCtrl+A",     IDM_EDIT_SELECTALL
        MENUITEM SEPARATOR
        MENUITEM "&Find...\tCtrl+F",        IDM_EDIT_FIND
        MENUITEM "Find &Next\tF3",          IDM_EDIT_FINDNEXT
        MENUITEM "&Replace...\tCtrl+H",     IDM_EDIT_REPLACE
        MENUITEM "&Go to Line...\tCtrl+G",  IDM_EDIT_GOTOLINE
        MENUITEM SEPARATOR
        MENUITEM "&Duplicate Line\tCtrl+D", IDM_EDIT_DUPLICATELINE
        MENUITEM "De&lete Line\tCtrl+Shift+K", IDM_EDIT_DELETELINE
        MENUITEM "Move Line &Up\tAlt+Up",   IDM_EDIT_MOVELINEUP
        MENUITEM "Move Line Do&wn\tAlt+Down", IDM_EDIT_MOVELINEDOWN
        MENUITEM SEPARATOR
        MENUITEM "&Indent\tTab",            IDM_EDIT_INDENT
        MENUITEM "U&nindent\tShift+Tab",    IDM_EDIT_UNINDENT
        MENUITEM "Toggle &Comment\tCtrl+/", IDM_EDIT_TOGGLECOMMENT
    END
    POPUP "F&ormat"
    BEGIN
        MENUITEM "&Word Wrap\tAlt+Z",       IDM_FORMAT_WORDWRAP
        MENUITEM "&Font...",                IDM_FORMAT_FONT
    END
    POPUP "&View"
    BEGIN
        MENUITEM "&Line Numbers\tCtrl+L",   IDM_VIEW_LINENUMBERS
        MENUITEM "&Relative Line Numbers",  IDM_VIEW_RELATIVENUM
        MENUITEM "&Syntax Highlighting",    IDM_VIEW_SYNTAX
        MENUITEM SEPARATOR
        POPUP "&Theme"
        BEGIN
            MENUITEM "&Light",              IDM_THEME_LIGHT
            MENUITEM "&Dark",               IDM_THEME_DARK
            MENUITEM SEPARATOR
            MENUITEM "&Tokyo Night",        IDM_THEME_TOKYO_NIGHT
            MENUITEM "Tokyo Night &Storm",  IDM_THEME_TOKYO_STORM
            MENUITEM "Tokyo Night Li&ght",  IDM_THEME_TOKYO_LIGHT
            MENUITEM SEPARATOR
            MENUITEM "&Monokai",            IDM_THEME_MONOKAI
            MENUITEM "D&racula",            IDM_THEME_DRACULA
            MENUITEM "&One Dark",           IDM_THEME_ONE_DARK
            MENUITEM "&Nord",               IDM_THEME_NORD
            MENUITEM "&Gruvbox Dark",       IDM_THEME_GRUVBOX
            MENUITEM SEPARATOR
            MENUITEM "&Everforest Dark",    IDM_THEME_EVERFOREST_DARK
            MENUITEM "Everforest &Light",   IDM_THEME_EVERFOREST_LIGHT
        END
        MENUITEM SEPARATOR
        MENUITEM "Zoom &In\tCtrl++",        IDM_VIEW_ZOOMIN
        MENUITEM "Zoom &Out\tCtrl+-",       IDM_VIEW_ZOOMOUT
